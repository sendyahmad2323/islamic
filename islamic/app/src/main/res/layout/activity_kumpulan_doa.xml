<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar dengan Toolbar untuk judul dan tombol Back -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_700">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_kumpulan_doa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:navigationIcon="@drawable/back"
            app:title="Kumpulan Doa" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Konten utama: ScrollView berisi 10 doa -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Doa ke-1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Doa Sebelum Tidur"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="اللَّهُمَّ بِاسْمِكَ أَمُوتُ وَأَحْيَا\nYa Allah, dengan nama‑Mu aku mati dan hidup."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doa ke-2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Doa Bangun Tidur"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="الْحَمْدُ لِلَّهِ الَّذِي أَحْيَانَا بَعْدَ مَا أَمَاتَنَا وَإِلَيْهِ النُّشُورُ\nSegala puji bagi Allah yang telah menghidupkan kami setelah mematikan kami, dan kepada‑Nya kami dibangkitkan."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doa ke-3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Doa Masuk Masjid"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="اللَّهُمَّ افْتَحْ لِي أَبْوَابَ رَحْمَتِكَ\nYa Allah, bukakanlah untukku pintu‑pintu rahmat‑Mu."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doa ke-4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. Doa Keluar Masjid"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="اللَّهُمَّ إِنِّي أَسْأَلُكَ مِنْ فَضْلِكَ\nYa Allah, sesungguhnya aku memohon kepada‑Mu karunia‑Mu."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doa ke-5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5. Doa Masuk Rumah"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="بِسْمِ اللَّهِ وَلَجْنَا، وَبِسْمِ اللَّهِ خَرَجْنَا\nDengan nama Allah kami masuk, dan dengan nama Allah kami keluar."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doa ke-6 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6. Doa Sebelum Makan"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="اللَّهُمَّ بَارِكْ لَنَا فِيمَا رَزَقْتَنَا وَقِنَا عَذَابَ النَّارِ\nYa Allah, berkahilah kami dalam rizki yang Engkau berikan, dan peliharalah kami dari siksa api neraka."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doa ke-7 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7. Doa Setelah Makan"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="الْحَمْدُ لِلَّهِ الَّذِي أَطْعَمَنَا وَسَقَانَا\nSegala puji bagi Allah yang telah memberi kami makan dan minum."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doa ke-8 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8. Doa Sesudah Adzan"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="اللَّهُمَّ رَبَّ هَذِهِ الدَّعْوَةِ التَّامَّةِ، وَالصَّلَاةِ الْقَائِمَةِ، آتِ مُحَمَّدًا الْوَسِيلَةَ وَالْفَضِيلَةَ، وَابْعَثْهُ مَقَامًا مَحْمُودًا الَّذِي وَعَدْتَهُ\nYa Allah, Tuhan pemilik seruan yang sempurna dan shalat yang didirikan, anugerahkanlah kepada Muhammad derajat kemulyaan dan keutamaan, dan bangkitkanlah dia di tempat terpuji yang Engkau janjikan."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doa ke-9 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9. Doa Sebelum Belajar"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="رَبِّ زِدْنِي عِلْمًا\nYa Rabb, tambahkanlah aku ilmu."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Doa ke-10 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10. Doa Masuk Rumah (Alternatif)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="بِسْمِ اللَّهِ وَلَجْنَا، وَبِسْمِ اللَّهِ خَرَجْنَا\nDengan nama Allah kami masuk, dan dengan nama Allah kami keluar."
                        android:textSize="14sp"
                        android:textColor="#424242" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
